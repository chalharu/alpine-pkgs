    x86_64)  _binarch=amd64; sha512sums="23bb8e98981c632a8e381fddbdbf50469400987036c24b412f3d238c931307978feaf6d5155f861c328675654c468d28f4d930dd12e5118969077b11299d0d4c  cloudflared-linux-$_binarch-$pkgver";;
    armv7)   _binarch=arm; sha512sums="2992c94930d703298b990db4eafa8c8ae7ebeb63ad4b38f2a1fc99999fdbb7eb991fe95cd9e5e768ad869684282223a59d5a1df858d30ff7ac4bbda4f9b59766  cloudflared-linux-$_binarch-$pkgver";;
