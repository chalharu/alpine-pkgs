    x86_64)  _binarch=amd64; sha512sums="e5d2c64f882eb871d3241c37a8588614ab2eb72028377e9cad396f8f6f2041ee84891f110b17f68d69c0e888fa3c1853a97c54374f3c73c116a0c9f680dbf04a  cloudflared-linux-$_binarch-$pkgver";;
    armv7)   _binarch=arm; sha512sums="04822c2d9baad7ae298e23a13ad3b98789f26a2f7a7b5939431ab4a83ba02504209ca9596e1cd59a58ac3323137fd84324d37f27e2086d2efa6575b154433fea  cloudflared-linux-$_binarch-$pkgver";;
