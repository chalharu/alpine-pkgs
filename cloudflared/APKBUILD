    x86_64)  _binarch=amd64; sha512sums="6d8b4dee11df47f7a74e32cc954569ab3de02c0e8de033504994970d3d6d02b8d50f690517453b0c7c8ab926dc93b31926d12bcf8870588e329434e450532773  cloudflared-linux-$_binarch-$pkgver";;
    armv7)   _binarch=arm; sha512sums="177e71cc5b68d4c18dd2c9fd4ddea32297332028c7e07beea505821c0b8a93e2ba4ad0d71c883a3c1a8474d80042c0b84e143c1f06d573739852153910b90ca4  cloudflared-linux-$_binarch-$pkgver";;
